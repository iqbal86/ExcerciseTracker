<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_marginTop="0dp"
        android:text=" Report Activity "
        android:textAlignment="center"
        android:layout_width="400dp"
        android:layout_height="50dp"

        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="50dp"
        android:text=" Total Distance Covered :  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/total_distance_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="  Distance  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/total_distance"
        android:layout_toRightOf="@id/total_distance_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="100dp"
        android:text=" Total Time Taken :  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/total_time_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="100dp"
        android:text="  Time   "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/total_time"
        android:layout_toRightOf="@id/total_time_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="150dp"
        android:text=" Average Speed :  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/average_speed_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="150dp"
        android:text="  Speed  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/average_speed"
        android:layout_toRightOf="@id/average_speed_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="200dp"
        android:text=" Altitude Max :  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/max_altitude_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="200dp"
        android:text="  Alt  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/max_altitude"
        android:layout_toRightOf="@id/max_altitude_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="250dp"
        android:text=" Altitude Min :  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/min_altitude_label"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_marginTop="250dp"
        android:text="  Alt  "
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/min_altitude"
        android:layout_toRightOf="@id/min_altitude_label"
        android:gravity="center_horizontal" />
</RelativeLayout>

